<div id="formId">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="RadioOptions" id="Employee" value="0" v-model="form.identity">
        <label class="form-check-label" for="Employee">職員/教師</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="RadioOptions" id="Student" value="1" v-model="form.identity">
        <label class="form-check-label" for="Student">學生</label>
    </div>
    <div class="mb-3">
        <label for="Target" class="form-label">身分證/學號</label>
        <input type="text" class="form-control" id="Target" v-model="form.target">
    </div>
    @Html.AntiForgeryToken()
    <button class="btn btn-primary" v-on:click="Send">Submit</button>

<div>
    <p>{{IsForgetPasswordInfo.IsForgetPassword}}</p>
    <p>{{IsForgetPasswordInfo.ChangeTime}}</p>
    <p>{{IsForgetPasswordInfo.Email}}</p>
    <p>{{IsForgetPasswordInfo.IsStudent}}</p>
    <p>{{IsForgetPasswordInfo.IsEmployee}}</p>
</div>

</div>


<script>
    var form = new Vue({
        el: '#formId',
        ready: function () {
        },
        data: {
            form: {
                identity: '',
                target: ''
            },
            verificationToken: '',
            IsForgetPasswordInfo: {
                IsForgetPassword: '',
                ChangeTime: '',
                Email: '',
                IsStudent: '',
                IsEmployee: '',
            },
        },
        methods: {
            Send: function () {
                ///範例14:取得學年度 採用 ajax post
                var vm = this;
                $.ajax({
                    url: "@Url.Action("Send", "Home")",
                    type: "post",
                    data: {
                        'target': vm.form,
                        "__RequestVerificationToken": vm.verificationToken,
                    },
                    dataType: 'json',
                    success: function (rdatas) {
                        if (JSON.parse(rdatas.serverMessage) == '') {
                            vm.IsForgetPasswordInfo = JSON.parse(rdatas.serverModel);
                        }
                        else {
                            vm.showAlert(JSON.parse(rdatas.serverMessage), true);
                        }
                    },
                    error: function (jqXHR, errorThrown) {
                        alert(errorThrown);
                    }
                });
            }
        },
        created: function () {
            this.verificationToken = $('input[name="__RequestVerificationToken"]').val();
        },
        filters: {

        },
        computed: {

        },
        watch: {
        },
    })
</script>